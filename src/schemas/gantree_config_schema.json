    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Schema for Gantree's primary config file",
    "type": "object",
    "properties": {
        "project": {
            "type": "string"
        },
        "repository": {
            "type": "object",
            "items": {
                "$ref": "#/definitions/repository"
            }
        },
        "validators": {
            "type": "object"
        }
    },
    "definitions": {
        "gantree_config": {
            "type": "object",
            "required": [
                "street_address",
                "city",
                "state"
            ]
        },
        "repository": {
            "type": "object"
            ""
        }
    }
}